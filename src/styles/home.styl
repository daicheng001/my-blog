:local(.home_content)
  width: 100%;
  display: flex;
  justify-content: space-between;
  align-items: center;
  flex-wrap: wrap;

:local(.home_item)
  width: 100%;
  height: 200px;
  background-color: skyblue;
  margin-bottom: 30px;
  display: flex;
  justify-content: space-between;
  background-color: #f5f5f5;
  border: 1px solid transparent;
  border-radius: 4px;
  box-shadow: 1px 1px 10px #5f5f5f
  padding: 20px;

:local(.home_item_left)
  flex: 1

:local(.title)
  font-size: 24px;
  font-weight: 700;
  margin-bottom: 15px;


:local(.description)
  overflow : hidden;
  text-overflow: ellipsis;
  font-size: 18px;
  display: -webkit-box;
  -webkit-line-clamp: 3;
  -webkit-box-orient: vertical;

:local(.options)
  margin-top: 10px;
  display: flex;
  justify-content: space-between;
  font-size: 16px;
  color: #bbb;

:local(.type)
  margin-right: 20px;

:local(.home_item_right)
  width: 200px;
  border-radius: 50%;
  img 
    display: block
    width: 100%;

  
:local(.home_footer)
  background-color: rgba(0,0,0,.7)

:local(.motto)
  font-size: 20px;
  